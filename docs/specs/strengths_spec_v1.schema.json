{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "strengths_spec_v1",
  "type": "object",
  "required": ["meta", "person", "config_echo", "frames"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["schema_version", "timestamp_utc"],
      "properties": {
        "schema_version": {
          "type": "string",
          "const": "strengths_spec_v1"
        },
        "timestamp_utc": { "type": "string" },
        "engine": {
          "type": "object",
          "properties": {
            "name": { "type": ["string", "null"] },
            "version": { "type": ["string", "null"] }
          },
          "additionalProperties": true
        },
        "extractor": { "type": ["string", "null"] }
      },
      "additionalProperties": true
    },
    "person": {
      "type": "object",
      "properties": {
        "id": { "type": ["string", "null"] },
        "label": { "type": ["string", "null"] }
      },
      "additionalProperties": true
    },
    "config_echo": {
      "type": "object",
      "properties": {
        "zodiac_type": { "type": ["string", "null"] },
        "ayanamsa_mode": { "type": ["string", "null"] },
        "ayanamsa_value_deg": { "type": ["number", "null"] },
        "house_system": { "type": ["string", "null"] },
        "node_mode": { "type": ["string", "null"] },
        "include_bodies": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "frames": {
      "type": "object",
      "required": ["planets"],
      "properties": {
        "planets": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["planet_id", "total_shadbala"],
            "properties": {
              "planet_id": { "type": "string" },
              "total_shadbala": { "type": "number" },
              "strength_ratio": { "type": ["number", "null"] }
            },
            "additionalProperties": true
          }
        },
        "summary": {
          "type": "object",
          "properties": {
            "strong_planets": {
              "type": "array",
              "items": { "type": "string" }
            },
            "weak_planets": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
