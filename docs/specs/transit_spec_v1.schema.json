{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["meta", "person", "config_echo", "frames"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["schema_version", "timestamp_utc", "engine"],
      "properties": {
        "schema_version": {"const": "transit_spec_v1"},
        "timestamp_utc": {"type": "string", "format": "date-time"},
        "engine": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {"type": "string"},
            "version": {"type": ["string", "null"]}
          }
        }
      }
    },
    "person": {
      "type": "object",
      "properties": {
        "id": {"type": ["string", "null"]},
        "label": {"type": ["string", "null"]}
      }
    },
    "config_echo": {
      "type": "object",
      "required": ["zodiac_type", "house_system"],
      "properties": {
        "zodiac_type": {"type": "string"},
        "ayanamsa_mode": {"type": ["string", "null"]},
        "ayanamsa_value_deg": {"type": ["number", "null"]},
        "house_system": {"type": "string"},
        "node_mode": {"type": "string"},
        "include_bodies": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "frames": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["frame_id", "reference", "ascendant", "planets"],
        "properties": {
          "frame_id": {"type": "string"},
          "description": {"type": "string"},
          "reference": {
            "type": "object",
            "required": ["datetime_utc", "timezone", "location"],
            "properties": {
              "datetime_utc": {"type": "string", "format": "date-time"},
              "timezone": {"type": "string"},
              "location": {
                "type": "object",
                "required": ["latitude", "longitude"],
                "properties": {
                  "latitude": {"type": "number"},
                  "longitude": {"type": "number"},
                  "place_name": {"type": ["string", "null"]}
                }
              }
            }
          },
          "ascendant": {
            "type": "object",
            "required": [
              "longitude_deg",
              "degree_in_sign",
              "sign_index",
              "sign_name",
              "house_index",
              "nakshatra_index",
              "nakshatra_name",
              "nakshatra_pada"
            ],
            "properties": {
              "id": {"type": ["string", "null"]},
              "longitude_deg": {"type": "number"},
              "degree_in_sign": {"type": "number"},
              "sign_index": {"type": "integer"},
              "sign_name": {"type": "string"},
              "house_index": {"type": ["integer", "null"]},
              "nakshatra_index": {"type": "integer"},
              "nakshatra_name": {"type": "string"},
              "nakshatra_pada": {"type": "integer"}
            }
          },
          "planets": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "longitude_deg",
                "degree_in_sign",
                "sign_index",
                "sign_name",
                "house_index",
                "nakshatra_index",
                "nakshatra_name",
                "nakshatra_pada"
              ],
              "properties": {
                "id": {"type": "string"},
                "name": {"type": "string"},
                "longitude_deg": {"type": "number"},
                "degree_in_sign": {"type": "number"},
                "sign_index": {"type": "integer"},
                "sign_name": {"type": "string"},
                "house_index": {"type": ["integer", "null"]},
                "nakshatra_index": {"type": "integer"},
                "nakshatra_name": {"type": "string"},
                "nakshatra_pada": {"type": "integer"},
                "speed_deg_per_day": {"type": ["number", "null"]},
                "retrograde": {"type": ["boolean", "null"]}
              }
            }
          }
        }
      }
    }
  }
}
